{
	"name": "viper-ic",
	"image": "hpretl/iic-osic-tools",

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-contrib/features/flit:2": {},
		"ghcr.io/devcontainers-contrib/features/ruff:1": {},
		"ghcr.io/va-h/devcontainers-features/uv:1": {},
		"ghcr.io/audacioustux/devcontainers/taskfile:1": {},
		"ghcr.io/devcontainers-contrib/features/cookiecutter:2": {},
		"ghcr.io/devcontainers/features/desktop-lite:1": {}
	 },

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	//  THese ports provide remote desktop access to run graphical apps
	"forwardPorts": [6080, 5901],
	"portsAttributes": {
		"6080": {
		   "label": "desktop - noVNC"
		},
		"5901": {
		   "label": "desktop - VNC"
		}
	  },

	// "postCreateCommand": "[ -f pyproject.toml ] && .devcontainer/setup || exit 0",
	// "containerEnv": {
		// Sets the display variable to use x-forwarding to enable graphical apps
		//"DISPLAY": "host.docker.internal:0.0" // Windows OS
		//"DISPLAY": "docker.for.mac.host.internal:0" // MAC OS
	// },
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"mhutchie.git-graph",
				"cschleiden.vscode-github-actions",
				"mechatroner.rainbow-csv",
				"tamasfe.even-better-toml",
				"redhat.vscode-yaml",
				"barakh.vscode-xschem-viewer"
			]
		}
	}

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
